# Contributor: Mirco Tischler <mt-ml at gmx dot de>

pkgname=fwupd
pkgver=#VERSION#
pkgrel=1
pkgdesc='A simple daemon to allow session software to update firmware'
arch=('i686' 'x86_64')
url='https://github.com/hughsie/fwupd'
license=('GPL2')
depends=('appstream-glib' 'fwupdate' 'colord')
makedepends=('meson' 'valgrind' 'perl-sgmls'
             'gobject-introspection' 'gtk-doc' 'python-pillow' 'python-cairo'
             'ttf-dejavu' 'adobe-source-han-sans-cn-fonts' 'python-gobject' 'git')

build() {
    cd ${pkgname}
    if [ -n "$CI" ]; then
        export CI="--werror"
    fi
    arch-meson -D b_lto=false $CI ../build

    ninja -v -C ../build
}

check() {
    echo "Test suite disabled for now due to https://github.com/hughsie/fwupd/issues/370"
    # ninja -C build test
}

package() {
    DESTDIR="${pkgdir}" ninja -C build install
}
