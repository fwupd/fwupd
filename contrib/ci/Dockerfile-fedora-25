	fwupdate-devel \
	gcab \
	gettext \
	glib2-devel \
	gobject-introspection-devel \
	gpgme-devel \
	gtk-doc \
	libappstream-glib-devel \
	libarchive-devel \
	libgudev1-devel \
	libgusb-devel \
	libsmbios-devel \
	libsoup-devel \
	meson \
	pango-devel \
	polkit-devel \
	python3 \
	python3-cairo \
	python3-gobject \
	python3-pillow \
	redhat-rpm-config \
	sqlite-devel \
	systemd \
	valgrind \
	valgrind-devel
RUN mkdir /build
