fu_{{vendor}}_{{example}}_device_finalize(GObject *object)
{
	Fu{{Vendor}}{{Example}}Device *self = FU_{{VENDOR}}_{{EXAMPLE}}_DEVICE(object);

	/* TODO: free any allocated instance state here */
